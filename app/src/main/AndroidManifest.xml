<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timetablin">

    <application
        android:allowBackup="true"
        android:icon="@drawable/baseline_today_white_48dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baseline_today_white_48dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PrefActivity"
            android:label="Settings"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.timetablin.MainActivity" />
        </activity>
        <activity
            android:name=".EventEdit"
            android:label="Edit an Event"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.timetablin.MainActivity" />
        </activity>
        <activity
            android:name=".EventAddition"
            android:label="Add an Event"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.timetablin.MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>